<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - AppTool</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/style/")
    @* @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryui", "~/bundles/bootstrap", "~/bundles/modernizr")
    @RenderSection("scripts", required: false)*@
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("开发工具箱", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("主页", "Index", "Home")</li>
                        <li>@Html.ActionLink("Html转换", "HtmlToJs", "Home")</li>
                        <li>@Html.ActionLink("JSON格式化", "Format", "Json")</li>
                        <li>@Html.ActionLink("JScript正则", "ScriptTest", "RegExp")</li>
                        <li>@Html.ActionLink("C#正则", "CsharpTest", "RegExp")</li>
                        <li>@Html.ActionLink("图片处理", "Echarts", "Image")</li>
                        <li>@Html.ActionLink("网页截图", "Screenshot", "Image")</li>
                        <li>@Html.ActionLink("汉字转拼音", "Index", "Pinyin")</li>
                        <li>@Html.ActionLink("谷歌IP", "GoogleIP", "Network")</li>
                        <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - AppTool</p>
            </div>
        </div>
    </footer>
    <script data-main="/Content/scripts/base/config.js" src="/Content/scripts/require.js"></script>
</body>
</html>
